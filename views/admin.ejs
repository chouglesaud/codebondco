<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="description" content="codebond">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="shortcut icon" type="image/x-icon" href="/static/images/codebond.ico" />

    <link href="https://fonts.googleapis.com/css?family=Poppins:500|Ubuntu&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="/static/styles/grid.css">

    <title>codebond admin</title>
    <style>
        body {
            background-color: #323538;
            color: #54595D;
        }
        h1{
           
            align-items: center;
            font-size: 3em;
            font-family: "helvetica";
            font-weight: bold;
            width: 100%;
            text-align: left;
            padding-left: 5px;
        }
        .container {
            padding: 0px;
        }
        .container div{
            width: 100%;
            display: flex;
            justify-content: center;
            flex-direction: column;
            align-items: center;
            height: 100vh;
          
          
        }
        
        h1 span{
            margin-top: 15px;
            text-align: center;
            float: right !important;
            font-size: 24px !important;
            
        }
        form{
            width: 100%;
            padding: 10px;
        }
        input{
            background-color: #54595D !important;
           margin: 10px 0px;
           outline: none !important;
           border-style: none !important; 
           color: #dde3e7 !important;
        }

    </style>
</head>

<body>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-6 col-sm-12 col-12">
                <h1 class="js">JS <span><%= js %></span></h1>
                <h1 class="python">PYTHON <span><%= py %></span></h1>
                <h1 class="node">NODE <span><%= node %></span></h1>
                <h1 class="react">REACT <span><%= react %></span></h1>
                <h1 class="css">CSS <span><%= css %></span></h1>
                <h1 class="other">OTHER <span><%= other %></span></h1>
                <h1>TOTAL <span><%= total %></span></h1>
                <h1>USERS <span><%= user %></span></h1>

            </div>      
    </div>
    <div class="row justify-conent-center">
            <div class="col-lg-6 col-md-6 col-sm-12 col-12">
                    <form>
                        <input type="text" name="title" id="title" class="form-control" placeholder="title">
                        <input type="text" name="slug" id="slug" class="form-control" placeholder="slug">
                        <input type="text" name="postusername" id="postusername" class="form-control" placeholder="postusername">
                        <input type="text" name="tech" id="tech" class="form-control" placeholder="technology">
                        <button  id="removepost" class="btn btn-block btn-primary">Remove Post</button>
                    </form>
                </div>
    </div>
    <div class="row justify-conent-center">
            <div class="col-lg-6 col-md-6 col-sm-12 col-12">
                    <form>
                        <input type="text" name="username" id="username" class="form-control" placeholder="username">
                        <button  id="removeuser" class="btn btn-block btn-primary">Remove User</button>
                    </form>
                </div>
    </div>
  
    </div>





    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script>
        let title        = document.querySelector("#title")
        let slug         = document.querySelector("#slug")
        let Postusername = document.querySelector("#postusername")
        let tech         = document.querySelector("#tech")
        let username     = document.querySelector("#username")
        let removepost   = document.querySelector("#removepost")
        let removeuser   = document.querySelector("#removeuser")

        removepost.addEventListener("click",(e)=>{
            e.preventDefault()
            axios.post("/admin/removepost",{title: title.value,tech: tech.value,slug: slug.value,postusername: postusername.value}).then(()=>{
                window.location.reload()
            })
        })
        removeuser.addEventListener("click",(e)=>{
            e.preventDefault()
            axios.post("/admin/removeuser",{username: username.value}).then(()=>{
                window.location.reload()
            })
        })

    </script>    

</body>

</html>