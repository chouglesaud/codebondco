                    <div class="col-lg-12 col-md-12 col-sm-12 col-12 link">
                            <h2>Host your image <a href="/<%=user.username%>/host" target="_blank"> here</a></h2>
                          
                                    <span style="color: #5bc8a1;">Editor doesn't support grammarly (disable grammarly)</span>
                                    <span style="color: #5bc8a1;">Use images hosted on codebond</span>

                          
                        </div>

                <% if(user){ %>
                <div class="row myfrom">
                    <div class="col-lg-4 col-md-4 co-sm-12 col-12">
                        <input type="text" required pattern="\S+"" id="title" class="form-control " placeholder="title">
                    </div> 
                    <div class="col-lg-4 col-md-4 co-sm-12 col-12">
                        <input type="text" name="image-url" id="image-url" placeholder="cover image url (optional)"
                                class="form-control" value="">
                    </div>
                    
                    
                    <div class="col-lg-4 col-md-4 co-sm-12 col-12">

