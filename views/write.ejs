                            <option value="1">javascript</option>
                            <option value="2">python</option>
                            <option value="3">nodejs</option>
                            <option value="4">reactjs</option>
                            <option value="5">css</option>
                            <option value="6">other</option>
                        </select>
                    </div>

                    

                    <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                        <div id="editorjs">
                               
                        </div>
                    </div>
                    <div class="col-lg-12 col-md-12 col-sm-12 col-12">

                        <div class="publish-cont">
                            <span >by publishing post you are agree with <a href="/codebond/terms">terms & conditions</a></span>
                            <div>
                                   
                                    <button class="btn btn-sm btn-primary" id="save">Save</button>
                                    <a href=<%="/"+user.username+"/preview"%> target="_blank" class="btn btn-sm btn-dark previewbtn">Preview</a>
                                    <button class="btn btn-success btn-sm publishbtn" disabled>Publish</button>
                                    <button class="btn btn-light btn-sm clear" style="border:1px solid #ccc;float: right;">Clear</button>
                            </div>

                        </div>
                    </div>
                    <% }else{ %>
                    <div style="display: flex; justify-content: center;">
                        <a href="/auth/login" class="btn btn-md a-login">login</a>
                    </div>
                    <% } %>
                </div>

            </div>

