    <script>
        document.querySelector(".search").style.display = "none"
        let title = document.querySelector(".heading").textContent.replace(/\s/g, "%20");
        let url = window.location
        let link = `${title}%20${url}`
        
        let twitter = document.querySelector("#twitter-link")
        twitter.setAttribute("href",`https://twitter.com/intent/tweet?text=${link}`)
        let facebook = document.querySelector("#facebook-link")
        facebook.setAttribute("href",`https://www.facebook.com/sharer.php?u=${url}`)
    </script>


